
{
  "name": "backend",
  "version": "2.0.0",
  "description": "Backend em TypeScript",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node server.ts",
    "start": "node dist/server.js",
    "dev:watch": "nodemon --exec ts-node server.ts",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:generate": "prisma generate",
    "seed:salas": "ts-node seed-salas.ts",
    "seed:salas:limpar": "ts-node seed-salas.ts --limpar",
    "prepare": "npm run build"
  },
  "dependencies": {
    "@prisma/client": "^5.7.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "multer": "^2.0.0-beta.2",
    "dotenv": "^16.3.1",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.5",
    "@types/pg": "^8.10.9",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2",
    "nodemon": "^3.0.2",
    "prisma": "^5.7.0"
  }
}
